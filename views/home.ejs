<%-include('partials/header')-%>
<h1>Home</h1>
<p><%=homeStartingContent%></p>



<%posts.forEach(function(post){%>
   
    <h3><%=post.title%></h3>
    <p><%=post.content.slice(0,100)+' ...'%></p>
    <a href="/posts/<%=post.title%>" style="color:#303036; font-weight: bold;">Read more</a>
<%})%>

<div class="postpage-btn">
<a href="/compose"  id="compose-btn" class=" btn btn-primary"> Add new post</a>
<a class="btn btn-danger" id="delete-btn" href="/deletepost" >Delete post</a>
</div>

<%-include('partials/footer')-%>


